<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2CA1FD"
    tools:context=".InserirConvite">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:text="FLOR DE LÃ“TUS" />

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_flor"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/text_boasvindas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="SEJA BEM VINDO!" />

    <TextView
        android:id="@+id/textView_email"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="E-MAIL" />

    <EditText
        android:id="@+id/email_user"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#F4F4F4"
        android:textColor="#000"
        android:ems="10"
        android:textColorHint="#8C7979"
        android:hint="Informe seu e-mail"
        android:inputType="textWebEmailAddress" />

    <TextView
        android:id="@+id/textView8"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="SENHA" />

    <EditText
        android:id="@+id/senha_user"
        android:layout_width="300dp"
        android:layout_height="40dp"

        android:layout_gravity="center"
        android:gravity="center"
        android:textColorHint="#8C7979"
        android:background="#F4F4F4"
        android:textColor="#000"
        android:ems="10"
        android:hint="Informe sua senha"
        android:inputType="textVisiblePassword" />
    <Button
        android:id="@+id/btn_login"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#E91E63"
        android:text="ENTRAR"/>

    <Button
        android:id="@+id/btn_signin"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#E91E63"
        android:text="CADASTRAR NOVA CONTA"/>

    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#673AB7"
        android:text="Artigos" />
</LinearLayout>

