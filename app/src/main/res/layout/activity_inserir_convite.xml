<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2CA1FD"
    tools:context=".InserirConvite">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="191dp"
        android:layout_height="246dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_couple"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/insere_convite"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#020202"
        android:textColor="#24ED00"
        android:ems="10"
        android:hint="Informe o código de sua parceira"
        android:inputType="textPersonName" />
    <Button
        android:id="@+id/valida_convite"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#35EF64"
        android:text="VALIDAR CÓDIGO"/>
</LinearLayout>