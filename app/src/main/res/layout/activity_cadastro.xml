<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#3DC9FF"
    android:layout_height="match_parent"
    tools:context=".Cadastro">

    <ImageView
        android:id="@+id/imgGender"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_gender_symbols_02"
        tools:ignore="VectorDrawableCompat" />

    <RadioGroup
        android:id="@+id/groupGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_below="@id/imgGender">

        <RadioButton
            android:id="@+id/feminino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FEMININO"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/masculino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MASCULINO"
            android:textColor="#000000" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView_nome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="INSIRA SEU NOME"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="#fff"
        android:textColor="#000"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/informeEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="INFORME SEU E-MAIL"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/reg_email"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#fff"
        android:textColor="#000"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="INFORME SUA SENHA"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#fff"
        android:textColor="#000"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/text_Confirme_Sua_Senha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CONFIRME SUA SENHA"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/reg_confirmpassword"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#fff"
        android:textColor="#000"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/new_cadastro"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#24CC27"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:onClick="registerUser"
        android:text="CADASTRAR" />

</LinearLayout>

